<div class="container">

    <div class="movie-info">
        <div>
            <h1><%= @movie["Title"] %><h1>
            <%= image_tag(@movie["Poster"]) %>
        </div>

        <div>
            <h4><%= @movie["Plot"]%></h4>
            <h6><%= @movie["Rated"]%></h6>
        </div>
        
    </div>

    <h1>Review</h1>
    <%= form_tag add_review_path do %>
        <%= label_tag :content, "Writing a review" %>
        <%= text_area_tag :content, nil, row: 50, cols: 52 %><br>

        <%= label_tag :rating, "Rate" %> 
        <%= number_field_tag :rating, nil, in: 0..5, step: 0.5 %><br>
        
        <%= hidden_field(:movie, :id, :value => @movie["imdbID"]) %>
        <%= submit_tag "Submit" %>
    <% end %>

    <h1> User Reviews</h1>
    <% if @reviews %>
        
        <% @reviews.each do |review| %>
            <% if review.content %>
                <div>
                    <%= review.content %> 
                    <%= review.rating %>
                    <%= link_to review.user.username, user_path(id: review.user.id) %>
                    <%= form_tag comment_path, method: :get do %>
                        <%= hidden_field_tag(:review, review.id) %>
                        <%= submit_tag "Add Comment"%>
                    <% end %>
                </div>
            <% end %>
        <% end %>
    <% end %>

</div>
